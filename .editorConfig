# Configuración para .editorconfig según las reglas de estilo de Airbnb

# Establece el estilo de final de línea a LF (Unix-style)
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Reglas para JavaScript y TypeScript
[*.js]
indent_style = space
indent_size = 2
max_line_length = 80
quote_type = single